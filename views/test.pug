extends layout_test

block content
    // Page Content
    .container
      // Heading Row
      .row.align-items-center.my-5
        .col-lg-7
          img.img-fluid.rounded.mb-4.mb-lg-0(src='https://dehayf5mhw1h7.cloudfront.net/wp-content/uploads/sites/1075/2018/12/30171909/breaking-news.jpg', alt='')
          p
        // /.col-lg-8
        .col-lg-5
          h1.font-weight-light Very Important News
          p
            | This is a template that is great for small businesses. It doesn't have too much fancy flare to it, but it makes a great use of the standard Bootstrap core components. Feel free to use this template for any project you want!
          a.btn.btn-primary(href='#') Read More
        // /.col-md-4
        // /.row
        // Call to Action Well
        |
        |
        // Content Row
        .row
        each article, i in articles
          .col-md-4.mb-5
            .card.h-100
              .card-body
                h2.card-title= article.title
                h6 #{article.date.toDateString()}
                p.card-text #{article.body.substring(0,200)}...
              .card-footer
                a.btn.btn-primary.btn-sm(href='/article/'+article._id) Read More
    