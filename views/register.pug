block content
  h1 Register
  form(method='POST', action='/user/register')
    #reg-form-group
      label Username:
      input.form-control(name='username', type='text')
    #reg-form-group
      label Password:
      input.form-control(name='password', type='password')
    br
    input.btn.btn-primary(type='submit', value='Sign Up')