doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(name='description', content='')
    meta(name='author', content='')
    title News Feed
    // Bootstrap core CSS
    link(href='/bower_components/bootstrap/dist/css/bootstrap.css', rel='stylesheet')
    // Custom styles for this template
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    // Navigation
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.fixed-top
      .container
        a.navbar-brand(href='/')
          img.d-inline-block.align-top(src='https://upload.wikimedia.org/wikipedia/commons/thumb/2/2a/Circle-icons-news.svg/768px-Circle-icons-news.svg.png', width='30', height='30', alt='')
          |      News Feed
        button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarResponsive', aria-controls='navbarResponsive', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarResponsive.collapse.navbar-collapse
          ul.navbar-nav.mr-auto
            if user
              li.nav-item
                a.nav-link(href='/') Welcome, #{user.username}
              li.nav-item
                a.nav-link(href='/article/add') Add Article
              li.nav-item
                a.nav-link(href='/add_category') Add Category
          ul.navbar-nav.ml-auto
            if user
              li.nav-item
                a.nav-link(href='/user/logout') Logout
            else
              li.nav-item
                a.nav-link(href='/user/register') Register
              li.nav-item
                a.nav-link(href='/user/login') Login
    br
    .container
      br
      br
      != messages('message', locals)
      if errors
        each error, i in errors
          div(class="alert alert-danger") #{error.msg}
      block content
      br
      hr
      footer
        p Copyright Â© 2020
  script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js')
  script(src='/bower_components/bootstrap/dist/js/bootstrap.bundle.min.js')
  script(src='/javascripts/main.js')
