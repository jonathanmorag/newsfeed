doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/bower_components/bootstrap/dist/css/bootstrap.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    nav.navbar.navbar-expand-lg.navbar-light.bg-light
      img(src="/images/favicon.ico" width="30" height="30" alt="")
      #newsfeed
        a.navbar-brand.mb-0.h1(href='/') News Feed
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
    
      .collapse.navbar-collapse(id='navbarSupportedContent')
        ul.navbar-nav.mr-auto
          if user
            li.nav-item
              a.nav-link(href='/') Welcome, #{user.username}
        ul.navbar-nav.float-right
          if user
            li.nav-item
              a.nav-link(href='/user/logout') Logout
          else
            li.nav-item
              a.nav-link(href='/user/register') Register
            li.nav-item
              a.nav-link(href='/user/login') Login
          //- li.nav-item.dropdown
          //-   a.nav-link.dropdown-toggle(id='navbarDropdownMenuLink', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false') Accounts
          //-   .dropdown-menu(aria-labelledby='navbarDropdownMenuLink')
          //-     a.dropdown-item(href='#') Settings
    br
    .container
      != messages('message', locals)
      if errors
        each error, i in errors
          div(class="alert alert-danger") #{error.msg}
      block content
      br
      hr
      footer
        p Copyright &copy; 2020
  script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js')
  script(src='/bower_components/bootstrap/dist/js/bootstrap.js')
  script(src='/javascripts/main.js')
